<h2>過去のシフト</h2>
<%= link_to "戻る", days_path %>
<% @day.order(start: :desc).each do |day| %>
  <% if @today > day.start %>
    <li>
      <%= day.id %>
      <%= link_to day_path(day.id) do %>
        <%= day.start.month %>月<%= day.start.day %>日～
        <%= day.finish.month %>月<%= day.finish.day %>日
      <% end %>
      <% if current_user.id == 1 %>
        <%= link_to "削除", day_path(day.id), method: :delete %>
      <% end %>
    </li>
  <% end %>
<% end %>