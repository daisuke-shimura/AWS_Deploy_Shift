<h1>Days#index</h1>
<p>Find me in app/views/days/index.html.erb</p>
<h2>今日</h2>
<%= @today %>
<hr>
<h2>新規日程</h2>
<%= form_with model: Day.new, url: days_path, method: :post do |f| %>
  <%= f.date_field :start, value: @date %>～<%= f.date_field :finish, value: @date+6 %>
  <%= f.submit "作成" %>
<% end %>
<hr>
<h2>日程一覧</h2>
<%= link_to "過去のシフト", past_path %><br>
<% @day.each do |day| %>
  <% if @today < day.start %>
    <li>
      <%= day.id %>
      <%= link_to day_path(day.id) do %>
        <%= day.start %>～<%= day.finish %>
      <% end %>
      　<%= link_to "削除", day_path(day.id), method: :delete %>
    </li>
  <% end %>
<% end %>
