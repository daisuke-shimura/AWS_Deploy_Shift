<br>
<p><%= link_to "日程一覧に戻る", days_path %></p>
<h3>
  <%= @day.start.month %>月<%= @day.start.day %>日～
  <%= @day.finish.month %>月<%= @day.finish.day %>日
</h3>
<p>ログイン中のユーザー：<%= current_user.name %></p>
<% unless current_user.job_by?(current_user.id, @day.id) %>
  <hr>
  <h2>シフト希望提出</h2>
  <%= render "form", day:@day %>
<% end %>
<hr>
<h3>シフト希望一覧</h3>
<table class = "table table-sm table-bordered table-hover" >

  <%= render "holiday", day:@day %>

  <tr class="table-secondary">
    <% if @day.event_by?(@day.id) %>
      <%= Event.all.each do |event| %>
        <% if @day.id == event.day_id %>
          <td></td>
          <td>催事等</td>
          <td style="font-size: small"><%= event.time1 %></td>
          <td style="font-size: small"><%= event.time2 %></td>
          <td style="font-size: small"><%= event.time3 %></td>
          <td style="font-size: small"><%= event.time4 %></td>
          <td style="font-size: small"><%= event.time5 %></td>
          <td style="font-size: small"><%= event.time6 %></td>
          <td style="font-size: small"><%= event.time7 %></td>
          <td>
            <% if current_user.id == 1 %>
              <%= link_to "編集", edit_day_events_path(event.day_id) %>
              <br>
              <%= link_to "削除", day_events_path(event.day_id), method: :delete %>
            <% else %>
            <% end %>
          </td>
          <td></td>
        <% end %>
      <% end %>
    <% else %>
      <td></td>
      <td>
        <% if current_user.id == 1 %>
          <%= link_to "催事等", new_day_events_path(@day.id) %>
        <% else %>
          催事等
        <% end %>
      </td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    <% end %>
  </tr>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td class="table-secondary"><%= user.id %></td>
        <td class="table-secondary"><%= user.name %></td>
        <% if user.job_by?(user.id,@day.id) %>
          <%= user.jobs.each do |job| %>
            <% if job.day_id == @day.id %>
              <td><%= job.time1 %></td>
              <td><%= job.time2 %></td>
              <td><%= job.time3 %></td>
              <td><%= job.time4 %></td>
              <td><%= job.time5 %></td>
              <td><%= job.time6 %></td>
              <td><%= job.time7 %></td>
              <% if job.user.id == current_user.id %>
                <td>
                  <%= link_to "編集", edit_day_job_path(@day.id,job.id) %>
                  <br>
                  <%= link_to "削除", day_job_path(@day.id,job.id), method: :delete, "data-confirm" => "シフト希望を削除しますか？" %>
                </td>
              <% else %>
                <td></td>
              <% end %>

              <% if job.comment_by?(job.user_id, @day.id) %>
              <td>
                <% @job_comment.all.each do |comment| %>
                  <% if comment.day_id == @day.id && comment.user_id == job.user_id %>
                    <% if comment.user_id == current_user.id %>
                      <div align = "left"><small><%= comment.comment %></small></div>
                      <div align = "right">
                        <%= link_to "修正", edit_day_job_job_comment_path(@day.id, job.id, comment.id) %>
                        ｜
                        <%= link_to day_job_job_comment_path(@day.id, job.id, comment.id), method: :delete do %>
                          <button type="button" class="btn btn-link">削除</button>
                        <% end %>
                      </div>
                    <% else %>
                      <div align = "left"><small><%= comment.comment %></small></div>
                    <% end %>

                  <% end %>
                <% end %>
              </td>
              <% else %>
              <td>
                <% if job.user_id == current_user.id %>
                  <%= form_with model: [@day, job, JobComment.new] do |f| %>
                    <%= f.text_area :comment ,class: 'form-control' %>
                    <div align = "right">
                      <button type="submit" class="btn btn-link">送信</button>
                    </div>
                  <% end %>
                <% end %>
              </td>
              <% end %>

            <% end %>

          <% end %>
        <% else %>
          <%= render "blank" %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>