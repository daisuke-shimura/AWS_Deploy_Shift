<h2>シフト希望訂正</h2>

<p>ログイン中のユーザー：<%= current_user.name %></p>

<%= render "repost" , job: @job %>
<br>

  <table class = "table table-sm table-bordered table-hover">

    <%= render "thead" %>

    <tbody>
    <% @user.each do |user| %>

      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <% if user.job_by?(user.id) %>
          <% user.jobs.each do |job| %>
              <%= render "time" , shift: job %>
            <% if job.comment_by?(job.user_id) %>
              <% JobComment.all.each do |comment| %>
                <% if comment.user_id == job.user_id %>
                  <td class="text-left", colspan="2"><%= comment.comment %></td>
                <% end %>
              <% end %>
            <% else %>
              <td colspan="2"></td>
            <% end %>
          <% end %>
        <% else %>
          <%= render "blank" %>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
