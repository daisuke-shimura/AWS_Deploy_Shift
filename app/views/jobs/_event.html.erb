<% if day.event_by?(day.id) %>
  <% Event.where(day_id: day.id).each do |event| %>
    
      <td class="one"></td>
      <td class ="saizi">催事等</td>
      <td class ="event">
        <% if day.mon_by?(day.id) %>
          <div style="color: red"><%= event.time1 %></div>
        <% else %>
          <div style="color: black"><%= event.time1 %></div>
        <% end %>
      </td>
      <td class ="event"><%= event.time2 %></td>
      <td class ="event"><%= event.time3 %></td>
      <td class ="event"><%= event.time4 %></td>
      <td class ="event"><%= event.time5 %></td>
      <td class ="event"><%= event.time6 %></td>
      <td class ="event"><%= event.time7 %></td>
      <td></td>
      <td></td>
    
  <% end %>
<% else %>
  <td class="one"></td>
  <td class ="saizi">催事等</td>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
  <td></td>
<% end %>
