  <tr class="table-secondary">
    <th class="one"></th>
    <th class="two"></th>
    <th class="day"><!--style="width: 9% "-->
      <% if day.mon_by?(day.id) %>
        <div style="color: red"><%= day.start.month %>/<%= day.start.day %></div>
      <% else %>
        <div style="color: black"><%= day.start.month %>/<%= day.start.day %></div>
      <% end %>
    </th>
    <th class="day">
      <% if day.tue_by?(day.id) %>
        <div style="color: red"><%= (day.start+1).month %>/<%= (day.start+1).day %></div>
      <% else %>
        <div style="color: black"><%= (day.start+1).month %>/<%= (day.start+1).day %></div>
      <% end %>
    </th>
    <th class="day">
      <% if day.wed_by?(day.id) %>
        <div style="color: red"><%= (day.start+2).month %>/<%= (day.start+2).day %></div>
      <% else %>
        <div style="color: black"><%= (day.start+2).month %>/<%= (day.start+2).day %></div>
      <% end %>
    </th>
    <th class="day">
      <% if day.thu_by?(day.id) %>
        <div style="color: red"><%= (day.start+3).month %>/<%= (day.start+3).day %></div>
      <% else %>
        <div style="color: black"><%= (day.start+3).month %>/<%= (day.start+3).day %></div>
      <% end %>
    </th>
    <th class="day">
      <% if day.fri_by?(day.id) %>
        <div style="color: red"><%= (day.start+4).month %>/<%= (day.start+4).day %></div>
      <% else %>
        <div style="color: black"><%= (day.start+4).month %>/<%= (day.start+4).day %></div>
      <% end %>
    </th>
    <th class="day">
      <% if day.sat_by?(day.id) %>
        <div style="color: red"><%= (day.start+5).month %>/<%= (day.start+5).day %></div>
      <% else %>
        <div style="color: dodgerblue"><%= (day.start+5).month %>/<%= (day.start+5).day %></div>
      <% end %>
    </th>
    <th class="day" style="color: red"><%= (day.start+6).month %>/<%= (day.start+6).day %></th>
    <!--width: 9%;-->
    <th class="edit"></th>
    <th class="come">備考</th>
  </tr>
  <tr class="table-secondary">
    <%= render "jobs/week", day:day %>
    <th class="week"></th>
  </tr>
  <tr class="table-secondary">
    <%= render "jobs/event", day:day %>
  </tr>