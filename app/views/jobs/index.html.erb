<h1>希望一覧</h1>

  <table>

    <thead>
      <tr>
        <th>　　　　　　</th>
        <th>1月1日（月）</th>
        <th>1月2日（火）</th>
        <th>1月3日（水）</th>
        <th>1月4日（木）</th>
        <th>1月5日（金）</th>
        <th>1月6日（土）</th>
        <th>1月7日（日）</th>
      </tr>
    </thead>

    <tbody>
      <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.user_id %></td>
        <td><%= shift.user.name %></td>
        <td><%= shift.time %></td>
        
        <td>
          <%= link_to '訂正', edit_job_path(shift.id) %>
        </td>
        <td>
          <%= link_to '削除', job_path(shift.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
      <% end %>
    </tbody>

  </table>
