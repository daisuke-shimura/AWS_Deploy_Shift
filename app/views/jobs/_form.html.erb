<%= form_with model:[day, Job.new], url: day_jobs_path(day.id), method: :post do |f| %>
    <table class = "table table-sm table-bordered table-hover" >
      <tr class="table-secondary">
        <%= render "day", day:day %>
        <th style="width: 24% "></th>
      </tr>
      <tr class="table-secondary">
        <%= render "week", day:day %>
      </tr>
      <tbody>
        <tr>
          <td><!--%= current_user.id %--></td>
          <td><%= current_user.name %></td>
          <td><%= f.text_field :time1 ,size: 4 %></td>
          <td><%= f.text_field :time2 ,size: 4 %></td>
          <td><%= f.text_field :time3 ,size: 4 %></td>
          <td><%= f.text_field :time4 ,size: 4 %></td>
          <td><%= f.text_field :time5 ,size: 4 %></td>
          <td><%= f.text_field :time6 ,size: 4 %></td>
          <td><%= f.text_field :time7 ,size: 4 %></td>
          <td class="text-left">
            <button type="submit" class="btn btn-primary btn-sm ">提出</button>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>