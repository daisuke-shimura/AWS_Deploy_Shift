<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<% if @user.job_by?(current_user.id) %>

    <table>
      <thead>
        <th>1月1日（月）</th>
        <th>1月2日（火）</th>
        <th>1月3日（水）</th>
        <th>1月4日（木）</th>
        <th>1月5日（金）</th>
        <th>1月6日（土）</th>
        <th>1月7日（日）</th>
      </thead>
      <tbody>
        <% @job.each do |shift| %>
          <td><%= shift.time1 %></td>
          <td><%= shift.time2 %></td>
          <td><%= shift.time3 %></td>
          <td><%= shift.time4 %></td>
          <td><%= shift.time5 %></td>
          <td><%= shift.time6 %></td>
          <td><%= shift.time7 %></td>
        <% end %>
      </tbody>
    </table>

  <% else %>
  <p>a</p>
    <%= render 'form', job: @job %>
<% end %>
