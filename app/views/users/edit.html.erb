<p>
  <%= link_to user_path(current_user.id) do %>
    <i class="fa-solid fa-arrow-left-long"> 戻る</i>
  <% end %>
</p>
<h3>ユーザー名 編集</h3>

<hr>
<%= form_with model:current_user do|f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= link_to user_path(current_user.id), "data-confirm" => "変更をキャンセルしますか？" do %><button class="btn btn-link btn-sm">キャンセル</button><% end %>
  <button type="submit" class="btn btn-primary btn-sm ">変更</button>
<% end %>